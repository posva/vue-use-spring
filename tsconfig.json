{
  "include": ["src/global.d.ts", "src/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"]
  }
}
